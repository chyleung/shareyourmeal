<h1>Update your event:</h1>

<%= form_for @event do |e| %>
  Name:
  <%= e.text_field :name %>
  <br />
  Date:
  <%= e.date_field :date, min: Date.today-1%>
   <br />
  Time:
  <%= e.time_field :time %>
   <br />
  District:
  <%= e.text_field :district_id %>
   <br />
  Address:
  <%= e.text_field :address %>
  <br />
  Maximum attendee:
  <%= e.text_field :max_attendee %>
  <br />
  Current attendee:
  <%= e.text_area :current_attendee %>
  <br />
  Description:
  <%= e.text_area :description %>
  <br />
  <% hidden_field_tag(:user_id, {:user_id => current_user.id}) %>
  <%= e.submit %>
<% end %>

<%= link_to "Delete Event", event_path, method: :delete, data: {confirm: "Are you sure?"} %>
<%= link_to "Back to Events",events_path %>