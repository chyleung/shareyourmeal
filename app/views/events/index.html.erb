<div class="container-fluid">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">

<%= form_tag events_path, method: :get, class: 'form-inline' do %>

  <div class="form-group">
  <%= text_field_tag :n, params[:n], :placeholder => "Enter event name", class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= text_field_tag :d, params[:d], :placeholder => "Enter district", class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= select_tag :t, options_for_select(["Today","This Week", "This Month", "All Events", "Past Events"], params[:t]), class: 'form-control' %>
  </div>

  <%= submit_tag "Search" %>
<% end %>
</br>
</br>
<%= render partial: 'events/list', locals: { events: @events } %>

    </div>
  </div>
</div>