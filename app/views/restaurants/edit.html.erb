<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 col-md-offset-3">

<h3>Update your restaurant</h3>

<%= simple_form_for(@restaurant, :html => {:class => 'form-horizontal'} ) do |r| %>
  <%= r.input :name %>
  <%= r.input :address %>
  <%= r.association :district, as: :select %>
  <%= r.input :phone, as: :string, input_html:{maxlength: 8, minlength: 8 } %>
  <%= r.input :coupon_type, as: :text %>
  <%= r.input :user_id, as: :hidden, input_html:{value: current_user.id} %>
  <%= r.button :submit, "Submit" %>
<% end %>

<%= link_to "Delete Restaurant", restaurant_path, method: :delete, data: {confirm: "Are you sure?"} %> |  
<%= link_to "Back to Restaurants",restaurants_path %>

    </div>
  </div>
</div>