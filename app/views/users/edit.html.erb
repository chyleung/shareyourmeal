<%= simple_form_for @user do |u| %>
  <%= u.input :firstname %>
  <br />
  <%= u.input :lastname %>
  <br />
  <%= u.input :email %>
  <br />
  <%= u.association :districts, as: :check_boxes %>
  <br />
  <%= u.button :submit, "Update" %>
<% end %>

<%= link_to "Back to Profile", user_path(@user) %>
