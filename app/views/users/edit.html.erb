<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 col-md-offset-3">

<h3>Update your profile</h3>
<p>Select districts receive regular updates from the chosen districts.</p></br>

<%= simple_form_for(@user, :html => {:class => 'form-horizontal'} ) do |u| %>
  <%= u.input :firstname %>
  <%= u.input :lastname %>
  <%= u.input :email %>
  <%= u.association :districts, as: :check_boxes %>
  <%= u.button :submit, "Update" %>
<% end %></br>

<%= link_to "Back to Profile", user_path(@user) %>

    </div>
  </div>
</div>